{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/EMCSLLC/PMDocu-DR/schemas/VerifyHashResult.schema.json",
  "title": "Verify Hash Result Evidence",
  "description": "Evidence generated by verify-hash.ps1 showing hash validation results.",
  "type": "object",
  "required": [
    "schema_version",
    "evidence_type",
    "timestamp_utc",
    "input_file",
    "status"
  ],
  "properties": {
    "schema_version": { "type": "string" },
    "evidence_type": { "type": "string", "enum": ["VerifyHashResult"] },
    "timestamp_utc": { "type": "string", "format": "date-time" },
    "workflow": { "type": "string" },
    "script": { "type": "string" },
    "input_file": { "type": "string" },
    "hash_verified": { "type": "boolean" },
    "expected_hash": { "type": "string", "pattern": "^[A-Fa-f0-9]{64}$" },
    "computed_hash": { "type": "string", "pattern": "^[A-Fa-f0-9]{64}$" },
    "status": { "type": "string", "enum": ["Success", "Failure"] },
    "message": { "type": "string" }
  }
}

