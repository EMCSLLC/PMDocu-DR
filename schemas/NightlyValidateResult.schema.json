{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/EMCSLLC/PMDocu-DR/schemas/NightlyValidateResult.schema.json",
  "title": "Nightly Validation Result",
  "description": "Evidence generated by nightly validation workflow to record repository integrity, structure checks, and baseline verification results.",
  "type": "object",
  "required": [
    "schema_version",
    "evidence_type",
    "timestamp_utc",
    "workflow",
    "status"
  ],
  "properties": {
    "schema_version": { "type": "string" },
    "evidence_type": { "type": "string", "enum": ["NightlyValidateResult"] },
    "timestamp_utc": { "type": "string", "format": "date-time" },
    "workflow": { "type": "string" },
    "validation_summary": {
      "type": "object",
      "properties": {
        "structure_valid": { "type": "boolean" },
        "baseline_verified": { "type": "boolean" },
        "govdocs_test_passed": { "type": "boolean" }
      }
    },
    "status": { "type": "string", "enum": ["Success", "Fail"] },
    "notes": { "type": "string" }
  }
}
