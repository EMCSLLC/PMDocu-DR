{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/EMCSLLC/PMDocu-DR/schemas/TestResult.schema.json",
  "title": "Generic Test Result Evidence",
  "type": "object",
  "required": [
    "schema_version",
    "evidence_type",
    "timestamp_utc",
    "status"
  ],
  "properties": {
    "schema_version": { "type": "string" },
    "evidence_type": { "const": "TestResult" },
    "timestamp_utc": { "type": "string", "format": "date-time" },
    "workflow": { "type": "string" },
    "script": { "type": ["string", "null"] },
    "test_name": { "type": ["string", "null"] },
    "status": {
      "type": "string",
      "enum": ["Pass", "Fail", "Legacy"]
    },
    "message": { "type": ["string", "null"] },
    "details": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": true
}
