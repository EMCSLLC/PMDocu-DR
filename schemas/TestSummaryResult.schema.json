{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://emcsllc.local/schemas/TestSummaryResult.schema.json",
  "title": "TestSummaryResult Evidence Schema",
  "description": "Defines structure for test summary evidence generated by Collect-PesterSummary.ps1.",
  "type": "object",
  "required": [
    "schema_version",
    "evidence_type",
    "script",
    "timestamp_utc",
    "status",
    "total_tests",
    "passed",
    "failed",
    "skipped",
    "duration_sec",
    "environment"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Version of this evidence schema."
    },
    "evidence_type": {
      "type": "string",
      "const": "TestSummaryResult"
    },
    "script": {
      "type": "string",
      "description": "Script that produced this evidence record."
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time",
      "description": "UTC timestamp when the evidence was generated."
    },
    "status": {
      "type": "string",
      "enum": ["SUCCESS", "FAILURE"]
    },
    "total_tests": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of Pester tests executed."
    },
    "passed": {
      "type": "integer",
      "minimum": 0
    },
    "failed": {
      "type": "integer",
      "minimum": 0
    },
    "skipped": {
      "type": "integer",
      "minimum": 0
    },
    "duration_sec": {
      "type": "number",
      "minimum": 0,
      "description": "Total duration of the test run in seconds."
    },
    "environment": {
      "type": "object",
      "required": ["os", "ps_version", "hostname"],
      "properties": {
        "os": { "type": "string" },
        "ps_version": { "type": "string" },
        "hostname": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
