{"$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://emcsllc.local/schemas/SignResult.schema.json",
  "title": "SignResult Evidence Schema",
  "description": "Defines schema for GPG signing result evidence generated by sign-gpg.ps1.",
  "type": "object",
  "required": [
    "schema_version",
    "evidence_type",
    "timestamp",
    "status",
    "input_file",
    "signature_file",
    "hash_file",
    "hash_sha256",
    "signing_key",
    "signing_engine",
    "environment"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
     "pattern": "^\\\\d+\\\\.\\\\d+\\\\.\\\\d+$",
      "description": "Version of this evidence schema."
    },
    "evidence_type": {
      "type": "string",
      "const": "SignResult"
    },
    "timestamp": { "type": "string", "format": "date-time" },
    "status": { "type": "string", "enum": ["SUCCESS", "FAILURE"] },
    "input_file": { "type": "string" },
    "signed_file": { "type": "string" },
    "signature_file": { "type": "string" },
    "hash_file": { "type": "string" },
    "hash_sha256": { "type": "string" },
    "signing_key": {
      "type": "object",
      "required": ["key_id", "fingerprint", "user_id"],
      "properties": {
        "key_id": { "type": "string" },
        "fingerprint": { "type": "string" },
        "user_id": { "type": "string" },
        "created": { "type": "string", "format": "date-time" },
        "expires": { "type": ["string", "null"] }
      },
      "additionalProperties": false
    },
    "signing_engine": {
      "type": "object",
      "required": ["tool", "version", "os", "hostname"],
      "properties": {
        "tool": { "type": "string" },
        "version": { "type": "string" },
        "os": { "type": "string" },
        "hostname": { "type": "string" }
      },
      "additionalProperties": false
    },
    "environment": {
      "type": "object",
      "required": ["os", "ps_version", "hostname"],
      "properties": {
        "os": { "type": "string" },
        "ps_version": { "type": "string" },
        "hostname": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
